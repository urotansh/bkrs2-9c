<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Create Group</h1>
      <%= render 'layouts/errors', obj: @group %>
      <%= form_with model: @group, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, 'グループ名' %>
          <%= f.text_field :name, class: 'form-control book_title' %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, '紹介文' %>
          <%= f.text_area :introduction, class: 'form-control book_body' %>
        </div>
        <div class="form-group">
          <%= f.label :image, 'グループ画像' %>
          <%= f.file_field :image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-info' %>
        </div>
      <% end %>
      <%= link_to 'Back', users_path, class: "back" %>
  </div>
</div>
